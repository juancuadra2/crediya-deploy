# ==========================================
# CONFIGURACIÓN DE VARIABLES SENSIBLES
# ==========================================
# Copia este archivo como .env y configura los valores reales
# IMPORTANTE: Usa contraseñas seguras, no valores de ejemplo

# ==========================================
# BASE DE DATOS POSTGRESQL UNIFICADA
# ==========================================
# Usuario único para toda la aplicación (genera con: openssl rand -base64 32)
POSTGRES_USER=crediya_user
POSTGRES_PASSWORD=your_super_secure_main_password_here

# Nombres de las bases de datos
POSTGRES_AUTH_DB=crediya_auth
POSTGRES_REQUESTS_DB=crediya_requests

# ==========================================
# SEGURIDAD JWT
# ==========================================
# Genera una clave secreta segura usando: openssl rand -base64 64
JWT_SECRET=your_jwt_secret_key_here

# ==========================================
# CONFIGURACIÓN AWS
# ==========================================
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_DEFAULT_REGION=us-east-1

# ==========================================
# CONFIGURACIÓN DE PUERTOS (OPCIONAL)
# ==========================================
AUTH_SERVICE_PORT=8080
REQUESTS_SERVICE_PORT=8081

# ==========================================
# CONFIGURACIÓN KAFKA
# ==========================================
KAFKA_BOOTSTRAP_SERVERS=kafka:29092

# ==========================================
# CONFIGURACIÓN DEBEZIUM CDC
# ==========================================
# Prefijo de los topics generados por Debezium para eventos de CDC
DEBEZIUM_TOPIC_PREFIX=crediya.auth